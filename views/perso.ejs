<div class=modif>
  <h1>Modifier vos informations :</h1>
  <form method="POST" action="/user/<%= user.id %>">
    <p>Nom : </p><input type="text" name="nom">
    <p>prenom : </p><input type="text" name="prenom"><br/><br/>
    <input class="submit" type="submit" value="submit">
</div>

<div class=modif>
  <h1>Modifier votre adresse :</h1>
  <form method="POST" action="/address/<%= user.addresses[0].id %>">
    <p>Ligne1 : </p><input type="text" name="ligne1">
    <p>Ligne2 : </p><input type="text" name="ligne2"><br/><br/>
    <p>Code Postal : </p><input type="text" name="codePostal"><br/><br/>
    <p>Ville : </p><input type="text" name="ville"><br/><br/>
    <p>Pays : </p><input type="text" name="pays"><br/><br/>
    <input class="submit" type="submit" value="submit">
  </form>
</div>

<div class=modif>
  <h1>Modifier votre image :</h1>
  <form method="POST" action="/user/upload/<%= user.id %>">
    <input class="file" type="file" value="selectFile">
    <input class="submit" type="submit" value="submit">
  </form>
</div>
